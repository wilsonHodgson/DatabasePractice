{
    "version": 8,
    "configurePresets": [
        {
            "name": "clang",
            "displayName": "Clang 20.1.6 x86_64-suse-linux",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_BUILD_PREFIX": "${sourceDir}/out/build/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "default",
            "displayName": "GCC Config",
            "description": "Default build using GCC (compatible with Github container)",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_BUILD_PREFIX": "${sourceDir}/out/build/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
      }
    ],
    "buildPresets": [
        {
            "name": "Project Build",
            "description": "",
            "displayName": "",
            "configurePreset": "default"
        }
    ],
    "testPresets": [
        {
            "name": "Project Clang Test",
            "description": "",
            "displayName": "",
            "configurePreset": "clang",
            "environment": {
                    "DB_PATH": "${sourceDir}/sakila_master.db"
            }
        }, {
            "name": "Github Test",
            "description": "",
            "displayName": "",
            "configurePreset": "default",
            "environment": {
                    "DB_PATH": "${sourceDir}/sakila_master.db"
            }
        }
    ]
}